<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name = "HeaderText">
        <item name="fontFamily">@font/typewriterb</item>
        <item name="android:gravity">start</item>
        <item name="android:textSize">34sp</item>
    </style>

    <style name = "SubHeaderText">
        <item name="fontFamily">@font/typewriter</item>
        <item name="android:gravity">start</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name = "SmallText">
        <item name="fontFamily">@font/swansea_q3pd</item>
        <item name="android:gravity">start</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TinyText">
        <item name="fontFamily">@font/swansea_italic</item>
        <item name="android:gravity">end</item>
        <item name="android:textSize">12sp</item>
    </style>

</resources>