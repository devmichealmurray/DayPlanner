<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.devmmurray.dayplanner.ui.fragment.HomeFragment"
        android:label="@string/menu_item_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_todo"
        android:name="com.devmmurray.dayplanner.ui.fragment.TodoFragment"
        android:label="@string/menu_item_todo"
        tools:layout="@layout/fragment_todo" >
        <action
            android:id="@+id/action_navigation_todo_to_addTodo"
            app:destination="@id/addTodo"
            app:enterAnim="@anim/slide_in_down"
            app:exitAnim="@anim/slide_out_up"
            app:popEnterAnim="@anim/slide_in_down"
            app:popExitAnim="@anim/slide_out_up"
            app:popUpTo="@id/addTodo" />
        <action
            android:id="@+id/action_navigation_todo_to_updateTodo"
            app:destination="@id/updateTodo" />
    </fragment>

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.devmmurray.dayplanner.ui.fragment.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />
    <fragment
        android:id="@+id/addTodo"
        android:name="com.devmmurray.dayplanner.ui.fragment.AddTodo"
        android:label="fragment_add_todo"
        tools:layout="@layout/fragment_add_todo" >
        <action
            android:id="@+id/action_addTodo_to_navigation_todo"
            app:destination="@id/navigation_todo"
            app:enterAnim="@anim/slide_in_up"
            app:exitAnim="@anim/slide_out_down"
            app:popEnterAnim="@anim/slide_in_up"
            app:popExitAnim="@anim/slide_out_down"
            app:popUpTo="@id/navigation_todo" />
    </fragment>
    <fragment
        android:id="@+id/updateTodo"
        android:name="com.devmmurray.dayplanner.ui.fragment.UpdateTodo"
        android:label="fragment_update_todo"
        tools:layout="@layout/fragment_update_todo" />
</navigation>