<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.devmmurray.dayplanner.ui.fragment.HomeFragment"
        android:label="@string/menu_item_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_navigation_home_to_addEventFragment"
            app:destination="@id/addEventFragment"
            app:enterAnim="@anim/slide_in_down"
            app:exitAnim="@anim/slide_out_up"
            app:popEnterAnim="@anim/slide_in_down"
            app:popExitAnim="@anim/slide_out_up" />
    </fragment>

    <fragment
        android:id="@+id/navigation_todo"
        android:name="com.devmmurray.dayplanner.ui.fragment.TodoFragment"
        android:label="@string/menu_item_todo"
        tools:layout="@layout/fragment_todo" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.devmmurray.dayplanner.ui.fragment.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />
    <fragment
        android:id="@+id/addEventFragment"
        android:name="com.devmmurray.dayplanner.ui.fragment.AddEventFragment"
        android:label="fragment_add_event"
        tools:layout="@layout/fragment_add_event" >
        <argument
            android:name="title"
            app:argType="string"
            android:defaultValue=""/>
        <argument
            android:name="location"
            app:argType="string"
            android:defaultValue=""/>
        <argument
            android:name="address"
            app:argType="string"
            android:defaultValue=""/>
        <argument
            android:name="notes"
            app:argType="string"
            android:defaultValue=""/>
        <argument
            android:name="datePickerTime"
            app:argType="long"
            android:defaultValue="0L"/>
        <argument
            android:name="dateId"
            app:argType="string"
            android:defaultValue=""/>
        <action
            android:id="@+id/action_addEventFragment_to_datePickerFragment"
            app:destination="@id/datePickerFragment"
            app:enterAnim="@anim/slide_in_down"
            app:exitAnim="@anim/slide_out_up"
            app:popEnterAnim="@anim/slide_in_down" />
        <action
            android:id="@+id/action_addEventFragment_to_navigation_home"
            app:destination="@id/navigation_home" />
    </fragment>
    <fragment
        android:id="@+id/datePickerFragment"
        android:name="com.devmmurray.dayplanner.ui.fragment.DatePickerFragment"
        android:label="fragment_date_picker"
        tools:layout="@layout/fragment_date_picker" >
        <argument
            android:name="title"
            app:argType="string"
            android:defaultValue=""/>
        <argument
            android:name="location"
            app:argType="string"
            android:defaultValue=""/>
        <argument
            android:name="address"
            app:argType="string"
            android:defaultValue=""/>
        <argument
            android:name="notes"
            app:argType="string"
            android:defaultValue=""/>
        <argument
            android:name="datePickerTime"
            app:argType="long"
            android:defaultValue="0L"/>
        <argument
            android:name="dateId"
            app:argType="string"
            android:defaultValue=""/>
        <action
            android:id="@+id/action_datePickerFragment_to_addEventFragment"
            app:destination="@id/addEventFragment" />
    </fragment>
</navigation>